pipeline {
    agent any

    environment {
        NODE_VERSION = '16.x' // Define Node.js version
    }

    stages {
        stage('Install Node.js') {
            steps {
                script {
                    // Use the exact name configured in Jenkins, e.g., 'NodeJS_16.x'
                    def nodeHome = tool name: 'NodeJS_16.x', type: 'NodeJSInstallation'
                    env.PATH = "${nodeHome}/bin:${env.PATH}"
                }
            }
        }

        stage('Clone Repository') {
            steps {
                git 'https://github.com/jayeshkurella/my-node-app.git'
            }
        }

        stage('Run Build Script') {
            steps {
                sh 'chmod +x build.sh'
                sh './build.sh'
            }
        }
    }

    post {
        always {
            echo "Pipeline finished."
        }
    }
}
