pipeline {
    agent any

    environment {
        NODE_VERSION = '16.x' // Define Node.js version
    }

    stages {
        stage('Install Node.js') {
            steps {
                script {
                    // Adjust the name to match the installed version, e.g., 'NodeJS_16'
                    def nodeHome = tool name: 'NodeJS_16', type: 'NodeJSInstallation'
                    env.PATH = "${nodeHome}/bin:${env.PATH}"
                }
            }
        }

        stage('Clone Repository') {
            steps {
                git 'https://github.com/jayeshkurella/my-node-app.git'
            }
        }

        stage('Run Build Script') {
            steps {
                sh 'chmod +x build.sh'
                sh './build.sh'
            }
        }
    }

    post {
        always {
            echo "Pipeline finished."
        }
    }
}
