pipeline {
    agent any

    stages {
        stage('Install Node.js') {
            steps {
                script {
                    // Make sure the installation name matches what you have in Jenkins
                    def nodeHome = tool name: 'NodeJS_16', type: 'NodeJSInstallation'
                    echo "Node.js Home: ${nodeHome}"
                    env.PATH = "${nodeHome}/bin:${env.PATH}"
                }
            }
        }

        stage('Clone Repository') {
            steps {
                git 'https://github.com/jayeshkurella/my-node-app.git'
            }
        }

        stage('Run Build Script') {
            steps {
                sh 'chmod +x build.sh'
                sh './build.sh'
            }
        }
    }

    post {
        always {
            echo "Pipeline finished."
        }
    }
}
